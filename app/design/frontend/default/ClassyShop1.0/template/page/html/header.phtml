<script>
function equalHeight(group) {
   tallest = 0;
   group.each(function() {
      thisHeight = jQuery(this).height();
      if(thisHeight > tallest) {
         tallest = thisHeight;
      }
   });

   group.height(tallest+20);
}
jQuery(document).ready(function() {
   equalHeight(jQuery(".item"));
});
</script>